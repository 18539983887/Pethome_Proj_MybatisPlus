<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qpf.pet.mapper.PetMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="petResultMap" type="com.qpf.pet.pojo.Pet">
                <result column="name" property="name"/>
                <result column="costprice" property="costprice"/>
                <result column="saleprice" property="saleprice"/>
                <result column="type_id" property="typeId"/>
                <result column="resources" property="resources"/>
                <result column="state" property="state"/>
                <result column="offsaletime" property="offsaletime"/>
                <result column="onsaletime" property="onsaletime"/>
                <result column="createtime" property="createtime"/>
                <result column="shop_id" property="shopId"/>
                <result column="user_id" property="userId"/>
                <result column="search_master_msg_id" property="searchMasterMsgId"/>
    </resultMap>

    <select id="findByPage" resultMap="petResultMap">
        select * from t_pet
        <if test="ew != null and ew != ''">
            ${ew.customSqlSegment}
        </if>
        <!--&lt;!&ndash; 如果配置了MybatisPlus的分页插件,则该操作不需要&ndash;&gt;-->
        <!--<if test="page != null">-->
        <!--    limit ${(page.current - 1) * page.size}, #{page.size}-->
        <!--</if>-->
    </select>


</mapper>
