<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qpf.pet.mapper.PetTypeMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="petTypeResultMap" type="com.qpf.pet.pojo.PetType">
                <result column="name" property="name"/>
                <result column="description" property="description"/>
                <result column="parent_id" property="parentId"/>
    </resultMap>

    <select id="findByPage" resultMap="petTypeResultMap">
        select * from t_pet_type
        <if test="ew != null and ew != ''">
            ${ew.customSqlSegment}
        </if>
        <!--&lt;!&ndash; 如果配置了MybatisPlus的分页插件,则该操作不需要&ndash;&gt;-->
        <!--<if test="page != null">-->
        <!--    limit ${(page.current - 1) * page.size}, #{page.size}-->
        <!--</if>-->
    </select>


</mapper>
