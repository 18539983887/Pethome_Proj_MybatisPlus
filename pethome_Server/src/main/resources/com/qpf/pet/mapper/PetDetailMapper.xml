<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qpf.pet.mapper.PetDetailMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="petDetailResultMap" type="com.qpf.pet.pojo.PetDetail">
                <result column="pet_id" property="petId"/>
                <result column="adoptNotice" property="adoptNotice"/>
                <result column="intro" property="intro"/>
    </resultMap>

    <select id="findByPage" resultMap="petDetailResultMap">
        select * from t_pet_detail
        <if test="ew != null and ew != ''">
            ${ew.customSqlSegment}
        </if>
        <!--&lt;!&ndash; 如果配置了MybatisPlus的分页插件,则该操作不需要&ndash;&gt;-->
        <!--<if test="page != null">-->
        <!--    limit ${(page.current - 1) * page.size}, #{page.size}-->
        <!--</if>-->
    </select>


</mapper>
