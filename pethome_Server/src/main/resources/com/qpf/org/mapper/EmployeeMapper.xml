<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qpf.org.mapper.EmployeeMapper">
    <resultMap id="EmployeeMap" type="com.qpf.org.pojo.Employee">
        <result property="departmentId" column="department_id"></result>
        <result property="id" column="id"></result>
        <association property="dept" column="department_id"
                     select="com.qpf.org.mapper.DepartmentMapper.selectById">
        </association>
        <collection property="roleIds" column="id" select="com.qpf.system.mapper.EmployeeRoleMapper.findRoleIdByEmployeeId"></collection>
    </resultMap>
    <select id="findByPage" resultMap="EmployeeMap">
        select * from t_employee
        <if test="ew != null and ew != ''">
            ${ew.customSqlSegment}
        </if>
        <!-- 如果配置了MybatisPlus的分页插件,则该操作不需要-->
<!--        <if test="page != null">-->
<!--            limit ${(page.current - 1) * page.size}, #{page.size}-->
<!--        </if>-->
    </select>
</mapper>