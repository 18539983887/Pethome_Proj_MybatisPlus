<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qpf.system.mapper.RoleMenuMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="roleMenuResultMap" type="com.qpf.system.pojo.RoleMenu">
                <result column="role_id" property="roleId"/>
                <result column="menu_id" property="menuId"/>
    </resultMap>

    <select id="findByPage" resultMap="roleMenuResultMap">
        select * from t_role_menu
        <if test="ew != null and ew != ''">
            ${ew.customSqlSegment}
        </if>
        <!--&lt;!&ndash; 如果配置了MybatisPlus的分页插件,则该操作不需要&ndash;&gt;-->
        <!--<if test="page != null">-->
        <!--    limit ${(page.current - 1) * page.size}, #{page.size}-->
        <!--</if>-->
    </select>
    <select id="findMenuIdByRoleId" resultType="java.lang.Long">
        select menu_id from t_role_menu where role_id = #{roleId}
    </select>


</mapper>
