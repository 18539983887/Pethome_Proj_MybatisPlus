<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qpf.system.mapper.MenuMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="menuResultMap" type="com.qpf.system.pojo.Menu">
        <result column="name" property="name"/>
        <result column="component" property="component"/>
        <result column="url" property="url"/>
        <result column="icon" property="icon"/>
        <result column="index" property="index"/>
        <result column="parent_id" property="parentId"/>
        <result column="intro" property="intro"/>
        <result column="state" property="state"/>
        <association property="parent" column="parent_id"
                     select="com.qpf.system.mapper.MenuMapper.selectById"></association>
    </resultMap>

    <select id="findByPage" resultMap="menuResultMap">
        select * from t_menu
        <if test="ew != null and ew != ''">
            ${ew.customSqlSegment}
        </if>
        <!--&lt;!&ndash; 如果配置了MybatisPlus的分页插件,则该操作不需要&ndash;&gt;-->
        <!--<if test="page != null">-->
        <!--    limit ${(page.current - 1) * page.size}, #{page.size}-->
        <!--</if>-->
    </select>
    <!--    ************-->
    <resultMap id="MenuMap" type="Menu">
        <id column="m1id" property="id"></id>
        <result column="m1name" property="name"></result>
        <result column="m1icon" property="icon"></result>
        <collection property="children" ofType="Menu">
            <id column="name" property="id"></id>
            <result column="url" property="url"></result>
            <result column="component" property="component"></result>
        </collection>
        <!--        不映射的部分，也就是没有在<resultMap>中定义的列，将无法直接映射到Java对象中。
                    这意味着在查询结果中，这些列对应的数据将无法在映射后的Java对象中获取到。-->
    </resultMap>
    <!--    *******-->
    <select id="getMenusByLogininfoId" resultType="com.qpf.system.pojo.Menu">
        select m1.id m1id, m1.name m1name, m1.icon m1icon, m2.*
        from (select tm.*
              from t_employee te
                       join t_employee_role ter on te.id = ter.employee_id
                       join t_role_menu trm on ter.role_id = trm.role_id
                       join t_menu tm on trm.menu_id = tm.id
              where logininfo_id = #{logininfoId}) m2
                 join t_menu m1 on m2.parent_id = m1.id

    </select>


</mapper>
